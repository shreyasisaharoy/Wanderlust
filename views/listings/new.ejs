<% layout('/layouts/boilerplate') %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create A New Listing</h3>
      <!-- <form method="post" action="/listings" novalidate class="needs-validation"> commented out pramit-->
        <form action="/listings" method="POST" enctype="multipart/form-data">
        <!-- Title -->
        <div class="mb-3">
          <label class="form-label" for="title">Title :</label><br>
          <input required class="form-control" type="text" name="listing[title]" placeholder="Enter Title">
          <div class="valid-feedback">Title looks good!</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label class="form-label" for="description">Description :</label><br>
          <textarea required class="form-control" name="listing[description]" placeholder="Enter Description" cols="60" rows="2"></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label class="form-label" for="location">Location :</label><br>
          <input required class="form-control" type="text" name="listing[location]" placeholder="Enter Location">
          <div class="invalid-feedback">Location name should be valid</div>
        </div>

        <!-- Price & Country -->
        <div class="row">
          <div class="mb-3 col-md-4">
            <label class="form-label" for="price">Price :</label><br>
            <input required class="form-control" type="number" min="0" name="listing[price]" placeholder="1200">
            <div class="invalid-feedback">Price should be valid</div>
          </div>
          <div class="mb-3 col-md-8">
            <label class="form-label" for="country">Country :</label><br>
            <input required class="form-control" type="text" name="listing[country]" placeholder="India, USA, UK">
            <div class="invalid-feedback">Country name should be valid</div>
          </div>
        </div>

        <!-- Image URL -->
        <!-- <div class="mb-3">
          <label class="form-label" for="image">Image Link :</label><br>
          <input required class="form-control" type="text" name="listing[image]" placeholder="Enter image URL (https://...)">
          <div class="invalid-feedback">Please provide a valid image URL</div>
        </div> -->
         <div class="mb-3">
    <label class="form-label" for="image">Image file :</label><br>
    <input required class="form-control" type="file" name="image" accept="image/*">
    <div class="invalid-feedback">Please provide an image file</div>
  </div>

        <!-- Submit -->
        <button type="submit" class="mt-3 btn btn-dark add-btn">&nbsp;&nbsp;Add&nbsp;&nbsp;</button><br><br>
      </form>
    </div>
  </div>
</body>
